        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
 
<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                Giới thiệu
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link" href="counter">
               Giám sát & phản biện
            </NavLink>
        </li>


        <li class="nav-item">
            <NavLink class="nav-link" href="fetchdata" @onclick="()=>expandSubMenu= !expandSubMenu">
                Hoạt động mặt trận
            </NavLink>
            @if (expandSubMenu)
            {
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/article/create">
                            Tin hoạt động
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/article/create">
                            Hoạt động địa phượng
                        </NavLink>
                    </li>
                </ul>
            }
        </li>


        <li class="nav-item">
            <NavLink class="nav-link" href="fetchdata">
                Dân tộc - tôn giáo
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link" href="article" @onclick="()=>expandSubMenu2= !expandSubMenu2">
                Bài viết
            </NavLink>
            @if (expandSubMenu2)
            {
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="article/create">
                            Thêm bài viết
                        </NavLink>
                    </li>
                </ul>
            }
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = false;
    private bool expandSubMenu;//add
    private bool expandSubMenu2;//add

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
