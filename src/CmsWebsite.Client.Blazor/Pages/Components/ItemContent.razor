<div class="row">

    @if (Data != null)
    {
        foreach (var item in Data)
        {
            <RadzenCard Style="width:33%">
                <div class="d-flex flex-row">
                    <img src=@item.UrlImage class="rounded-circle float-left mr-3" style="width: 80px; height: 80px;">
                    <div>
                        <span>
                          
                        </span>
                    </div>
                    <div>
                        <span class="cms-content">@item.Content</span>
                    </div>
                </div>
            </RadzenCard>
        }
    }
</div>

@code {

    [Parameter]
    public List<Item>? data { get; set; }

    List<Item> Data = new List<Item>() {
        new Item ("img/empty.jpg", "Cổng thông tin điện tử chính phủ",null),
        new Item ("img/empty.jpg", "Sáng 31/3, phiên trọng thể Đại hội Hội Doanh nhân trẻ Việt Nam lần thứ VII",null),
        new Item ("img/empty.jpg", "Ngày bầu cử đại biểu Quốc hội khóa XV và đại biểu Hội đồng nhân dân các cấp nhiệm kỳ 2021-2026",null)
    };

    public class Item
    {
        public Item(string urlImage, string content, DateTime? createDate)
        {
            UrlImage = urlImage;
            Content = content;
            CreateDate = createDate;
        }
        public string UrlImage { get; set; }
        public string Content { get; set; }
        public DateTime? CreateDate { get; set; }
    }

}
