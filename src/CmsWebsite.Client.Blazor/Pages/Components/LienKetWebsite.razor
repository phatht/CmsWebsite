@inject IJSRuntime JSRuntime;

<div class="d-flex flex-row">
    <div class="input-group">
        <RadzenTextBox Change=@OnInput class="form-control" Placeholder="Tìm kiếm thông tin" />
        <RadzenButton class="btn btn-outline-secondary" Icon="search"
                      Variant="Variant.Flat" Shade="Shade.Lighter" ButtonStyle="ButtonStyle.Warning" />
    </div>

</div>

<span class="tag my-2" >LIÊN KẾT WEBSITE</span>
<RadzenDropDown AllowClear="true" TValue="string" Class="w-100" Placeholder="Tìm kiếm thông tin"
                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                FilterOperator="StringFilterOperator.Contains" AllowFiltering="true"
                Data=@List TextProperty="Name" ValueProperty="Link" Change=@OnChange/>

@code {

    List<Item> List = new List<Item>() {
        new Item ("https://chinhphu.vn/", "Cổng thông tin điện tử chính phủ"),
        new Item ("https://dangcongsan.vn/", "Báo điện tử đảng cộng sản")
    };

    public class Item
    {
        public Item(string link, string name)
        {
            Link = link;
            Name = name;
        }
        public string Link { get; set; }
        public string Name { get; set; }

    }

    

    async Task OnChange(object value)
    {
        await JSRuntime.InvokeAsync<string>("open", $"{value}", "_blank");
    }
    void OnInput(string value)
    {
        Console.WriteLine(value);
    }
}
