@using CmsWebsite.Share.Models.Article
<div class="row">

    @if (Articles != null)
    {
        foreach (var item in Articles.Take(3))
        {
            <RadzenCard Style="width:33%">
                <div class="d-flex flex-row">
                    <img src="@item.ImageFile" class="rounded float-left mr-3" style="width: 80px; height: 80px;">
                    <div>
                        <span style="font-size:13px">@item.Description</span>
                    </div>
                </div>
            </RadzenCard>
        }
    }
</div>

@code {

    [Parameter]
    public List<ArticleDTO>? Articles { get; set; }

}
