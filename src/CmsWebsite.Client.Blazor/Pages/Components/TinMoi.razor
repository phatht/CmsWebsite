@using CmsWebsite.Client.Blazor.Services.Article;
@using CmsWebsite.Share.Models.Article
@inject NavigationManager uriHelper
@inject IArticleService ArticleService
<div class="row">
    
    @if (newArticle != null)
    {
        <RadzenCard Style="width: 96.6%; margin: 0px 0 20px 19px; background-color: #f5f5f5d6">
            <h3 style="color: #ffae11;">TIN MỚI</h3>
            <div class="row" style="margin-top: 20px;">
                @foreach (var article in newArticle)
                {
                    <div class="col-md-3">
                        <span @onclick="() => EditRow(article.ArticleID)">
                            <img src="@article.ImageFile" style="width: 100%; height: 60%; object-fit: cover;" class="rounded">
                            <p class="article-title" style="margin-top: 7px; font-size:13px; font-weight: 700;">@article.Title</p>
                        </span>
                    </div>
                }
            </div>
        </RadzenCard>
    }
    
</div>

@code {
    public List<ArticleDTO> newArticle = new();

    protected async override Task OnInitializedAsync()
    {
        var articles = await ArticleService.GetListArticle();
        newArticle = articles.OrderByDescending(d => d.CreatedDate).Take(4).ToList();
    }

    protected void EditRow(long id) => uriHelper.NavigateTo($"chitietbaiviet/{id}");
}
