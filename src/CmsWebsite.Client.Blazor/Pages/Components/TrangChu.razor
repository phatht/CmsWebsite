@if (listArticle != null)
{
    <RadzenCard Style="width: 100%;" class="m-1">
        <div class="row">
            <div class="col-md-8">
                <RadzenImage @onclick="() => EditRow(listArticle[0].ArticleID)" Path=@listArticle[0].ImageFile Style="width: 100%; height: 70%; object-fit: cover; cursor: pointer;" class="rounded" />
                <label @onclick="() => EditRow(listArticle[0].ArticleID)" class="m-2 article-title" style="font-weight: 700; font-size: 22px; cursor: pointer;">@listArticle[0].Title</label>
                <p class="wrapper-p mr-2">@listArticle[0].Description</p>
            </div>

            <div class="col-md-4" style="height: 545px; overflow: scroll;">
                <RadzenImage @onclick="() => EditRow(listArticle[1].ArticleID)" Path=@listArticle[1].ImageFile Style="width: 100%; margin-bottom: 10px; cursor: pointer;" class="rounded" />
                <a class="text-decoration-none text-reset" href="/chitietbaiviet/@listArticle[1].ArticleID">@listArticle[1].Title</a>
                @foreach (var article in listArticle.Skip(2).Take(4))
                {
                    <hr />
                    <a class="text-decoration-none text-reset" href="/chitietbaiviet/@article.ArticleID">@article.Title</a>
                }
            </div>
        </div>
    </RadzenCard>
}
else
{
    <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
    @*<ShimmerLoading></ShimmerLoading>*@

}

