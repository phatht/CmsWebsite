@if (groupArticle != null)
{
    bool isLayout = false;
    foreach (var item in groupArticle)
    {
        if (isLayout == false)
        {
            <RadzenCard Style="width: 100%; margin: 20px 0 0 3px;">
                <div class="row wrapper">
                    <a style="color: #ffae11; text-decoration: none; font-size: 18px; font-weight: bold;" href="/baiviettheochuyenmuc/@item.Category.CategoryId">@item.Category.CategoryName.ToUpper()</a>

                    <div class="col-md-7" style="cursor: pointer; margin-top: 10px;" @onclick="() => EditRow(item.Articles[0].ArticleID)">
                        <img src=@item.Articles[0].ImageFile Style="width: 100%; height: 60%; object-fit: cover;" class="rounded" />
                        <label class="m-2 article-title" style="font-weight:700;font-size:22px;">@item.Articles[0].Title</label>
                    </div>

                    <div class="col-md-5">
                        @foreach (var article in item.Articles.Skip(1).Take(4))
                        {
                            <div class="d-flex overflow-hidden mb-3" style="cursor: pointer;" @onclick="() => EditRow(article.ArticleID)">
                                <img src="@article.ImageFile" class="rounded mr-2" style="width: 95px; height: 75px; object-fit: cover;">
                                <p class="wrapper-p" style="font-size: 13px; font-weight: 700;">@article.Title</p>
                            </div>
                        }
                    </div>
                </div>
            </RadzenCard>
            isLayout = true;
        }
        else
        {
            <RadzenCard Style="width: 100%; margin: 20px 0 0 3px;">

                <a style="color: #ffae11; text-decoration: none; font-size: 18px; font-weight: bold;" href="/baiviettheochuyenmuc/@item.Category.CategoryId">@item.Category.CategoryName.ToUpper()</a>

                    <div style="display: flex; cursor: pointer; margin-top: 10px;" @onclick="() => EditRow(item.Articles[0].ArticleID)">
                        <img src=@item.Articles[0].ImageFile Style="width: 350px; height: 235px; object-fit: cover;" class="rounded" />
                        <div style="margin-left: 20px;">
                            <label class="article-title" style="font-weight:700; font-size:22px; cursor: pointer;">@item.Articles[0].Title</label>
                            <p>@item.Articles[0].Description</p>
                        </div>
                    </div>
                    
                    <div class="row" style="margin-top: 20px;">
                        @foreach (var article in item.Articles.Skip(1).Take(3))
                        {
                            <div class="col-md-4">
                                <span @onclick="() => EditRow(article.ArticleID)">
                                    <img src="@article.ImageFile" style="width: 100%; height: 60%; object-fit: cover;" class="rounded">
                                    <p class="article-title" style="margin-top: 7px; font-size:13px; font-weight: 700;">@article.Title</p>
                                </span>
                            </div>
                        }
                    </div>
                
            </RadzenCard>
            isLayout = false;
        }

    }
}

